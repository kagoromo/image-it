<header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <%= link_to "ichigo", :root, id: "logo" %>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Home", :root %></li>
          <% if user_signed_in? %>
            <li><%= link_to user_page_button(current_user.name, current_user.id), user_path(current_user.id) %></li>
            <li><%= link_to "Upload Image", new_image_path %></li>
            <li><%= link_to "Edit account", edit_user_registration_path, 
                            method: :get %></li>
            <li><%= link_to "Log out", destroy_user_session_path, 
                            method: :delete %></li>
          <% else %>
            <li><%= link_to "Log in", new_user_session_path, 
                            method: :get %></li>
            <li><%= link_to "Sign up", user_registration_path, 
                            method: :post %></li>
          <% end %>
        </ul>
      </nav>
    </div>
</header>