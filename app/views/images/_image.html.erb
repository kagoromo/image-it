<div class="image-name">
  <%= link_to image.name, image_path(id: image.id) %> 
</div>
<div class="user-name">
  <%= link_to image.title, image_path(id: image.id) %> 
</div>
<div class="user-name">
  By <% if image.user.name.empty? %>
    <%= link_to image.user.email, image.user %>
  <% else %>
    <%= link_to image.user.name, image.user %>
  <% end %>
</div>
<div class="image-div">
  <%= link_to(image_tag(image.file, :class => "image-preview"), image_path(id: image.id)) %>
</div>