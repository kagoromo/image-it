<h1>This is our homepage</h1>
<div class="center jumbotron">
  <% if user_signed_in? %>
    <% if current_user.name.empty? %>
    <h2>Hello, <%= current_user.email %>!</h2>
    <% else %>
    <h2>Hello, <%= current_user.name %></h2>
    <% end %>
    <%= link_to "Upload Image", new_image_path, method: :get,
                class: "btn btn-lg btn-primary" %>
  <% else %>
    <h2>Hello guest!</h2>
    <%= link_to "Sign up now!", new_user_registration_path, method: :get, 
                class: "btn btn-lg btn-primary" %>
  <% end %>
</div>