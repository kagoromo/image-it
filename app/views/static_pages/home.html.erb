<div class="center jumbotron">
  <h1>This is our homepage.</h1>
  <% if user_signed_in? %>
    <h2>Hello, <%= current_user.email %>!</h2>
  <% else %>
    <h2>Hello guest!</h2>
    <%= link_to "Sign up now!", user_registration_path, method: :post, 
                class: "btn btn-lg btn-primary" %>
  <% end %>
</div>